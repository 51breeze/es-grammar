{
    "name": "es-grammar",
    "displayName": "EaseScript",
    "description": "EaseScript code grammar",
    "publisher": "EaseScript",
    "version": "1.1.7",
    "engines": {
        "vscode": "^1.54.0"
    },
    "icon": "images/logo.png",
    "categories": [
        "Programming Languages"
    ],
    "main": "./lib/extension",
    "scripts": {
        "build": "grunt default"
    },
    "activationEvents": [
        "onLanguage:easescript"
    ],
    "contributes": {
        "languages": [
            {
                "id": "easescript",
                "aliases": [
                    "es",
                    "ES",
                    "easescript"
                ],
                "extensions": [
                    ".es",
                    ".ES"
                ],
                "configuration": "./lib/syntaxes/language-configuration.json",
                "icon": {
                    "light": "images/icon-light.png",
                    "dark": "images/icon-dark.png"
                }
            }
        ],
        "grammars": [
            {
                "language": "easescript",
                "scopeName": "source.es",
                "path": "./lib/syntaxes/easescript.tmLanguage.json"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "EaseScript",
            "properties": {
                "EaseScript.SyntaxPlugins": {
                    "type": "string",
                    "default": "",
                    "description": "语法插件。多个用 '|' 隔开"
                },
                "EaseScript.LoadTypeFile": {
                    "type": "boolean",
                    "default": true,
                    "description": "自动加载类型文件"
                }
            }
        }
    },
    "keywords": [
        "EaseScript",
        "es"
    ],
    "author": "664371281@qq.com",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/51breeze/es-grammar.git"
    },
    "devDependencies": {
        "grunt": "^1.4.1",
        "grunt-contrib-copy": "^1.0.0",
        "grunt-contrib-uglify": "^5.2.1",
        "grunt-rollup": "^11.9.0",
        "rollup-plugin-commonjs": "^10.1.0",
        "rollup-plugin-node-resolve": "^5.2.0",
        "rollup-plugin-replace": "^2.2.0",
        "rollup-plugin-uglify": "^6.0.4"
    }
}
