{
    "name": "es",
    "displayName": "EaseScript",
    "description": "A EaseScript code grammar",
    "publisher": "EaseScript",
    "version": "1.0.9",
    "engines": {
        "vscode": "^1.54.0"
    },
    "icon": "images/logo.png",
    "categories": [
        "Programming Languages"
    ],
    "main": "./lib/extension",
    "activationEvents": [
        "onLanguage:easescript"
    ],
    "contributes": {
        "languages": [
            {
                "id": "easescript",
                "aliases": [
                    "es",
                    "ES",
                    "easescript"
                ],
                "extensions": [
                    ".es",
                    ".ES"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "easescript",
                "scopeName": "source.es",
                "path": "./syntaxes/easescript.tmLanguage.json"
            }
        ],
        "configuration":{
            "type": "object",
            "title": "编译语法配置",
            "properties": {
                "EaseScript.Client": {
                    "type": "string",
                    "default": "es-javascript",
                    "description": "客户端语法。多个用 '|' 隔开"
                },
                "EaseScript.Server": {
                    "type": "string",
                    "default": "es-php",
                    "description": "服务端语法。多个用 '|' 隔开"
                }
            }
        }
    },
    "dependencies": {
        "easescript": "^0.x.x"
    },
    "keywords": [
        "EaseScript",
        "es"
    ],
    "author": "664371281@qq.com",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/51breeze/es-grammar.git"
    }
}
